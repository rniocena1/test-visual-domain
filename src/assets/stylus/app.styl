.btn {
  display: inline-block;
  padding: 6px 12px;
  margin-bottom: 0;
  font-size: 14px;
  font-weight: 400;
  line-height: 1.42857143;
  text-align: center;
  white-space: nowrap;
  vertical-align: middle;
  touch-action: manipulation;
  cursor: pointer;
  user-select: none;
  background-image: none;
  border: 1px solid transparent;
  border-radius: 4px;
}

.btn-default {
  color: #fff;
  background-color: #337ab7;
  border-color: #2e6da4;
}

.btn-delete {
  color: #fff;
  background-color: #d9534f;
  border-color: #d43f3a;
}

.btn-full {
  width: 100%;
  overflow: hidden;
  text-overflow: ellipsis;
}

.btn.disabled,
.btn[disabled] {
  cursor: not-allowed;
  box-shadow: none;
  opacity: .65;
}

.txt-label {
  vertical-align: middle;
  line-height: 2.14286;
  color: #555;
  font-size: 14px;
  font-weight: 600;

  display: inline-block;
  box-sizing: border-box;
}

.txt-input {
  outline: none;
  border: 1px solid #ddd;
  border-radius: 4px;
  background-color: #fff;
  padding: .71429em 1.14286em;
  min-height: 40px;
  box-sizing: border-box;
  vertical-align: middle;
  line-height: 1.28571;
  color: #000;
  font-family: inherit;
  font-size: 14px;
}

.txt-input-dashboard {
  width: 25%;
}

.modal-mask {
  position: fixed;
  z-index: 9998;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #353839;
  display: table;
  transition: opacity .3s ease;
}

.modal-wrapper {
  display: table-cell;
  vertical-align: middle;
}

.modal-container {
  width: 300px;
  margin: 0px auto;
  padding: 20px 30px;
  background-color: #fff;
  border-radius: 2px;
  box-shadow: 0 2px 8px rgba(0, 0, 0, .33);
  transition: all .3s ease;
  font-family: Helvetica, Arial, sans-serif;
}

.modal-header h3 {
  margin-top: 0;
  color: #42b983;
}

.modal-default-button {
  float: right;
}

/*
 * The following styles are auto-applied to elements with
 * transition="modal" when their visibility is toggled
 * by Vue.js.
 *
 * You can easily play with the modal transition by editing
 * these styles.
 */

.modal-enter {
  opacity: 0;
}

.modal-leave-active {
  opacity: 0;
}

.modal-enter .modal-container,
.modal-leave-active .modal-container {
  -webkit-transform: scale(1.1);
  transform: scale(1.1);
}